<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obligatorio_2</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Obligatorio_2.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand text-primary fs-3 px-3" asp-area="" asp-controller="Home" asp-action="Index">Social.NetWork</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between fs-5">
                    <ul class="navbar-nav flex-grow-1 justify-content-sm-evenly">
                        <li class="nav-item">
                            <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (Context.Session.GetString("rol") == "ADMIN")
                        {
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="ListarUsuarios">Listar Usuarios</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="BloquearUsuario">Bloquear Usuario</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Admin" asp-action="BloquearPost">Bloquear Post</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") == "MIEMBRO")
                        {
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="VerPost">Posts</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="EnviarSolicitud">Enviar Solicitud</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="VerSolicitudes">Solicitudes de Amistad</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="RealizarPost">Nuevo Post</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="RealizarComentario">Comentar</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="Reaccionar">Reaccionar</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="ListarPorTextoyNumero">Listar Posts</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") == "MIEMBRO_BLOQUEADO")
                        {
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="VerPost">Posts</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="EnviarSolicitud">Enviar Solicitud</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="VerSolicitudes">Solicitudes de Amistad</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Miembro" asp-action="ListarPorTextoyNumero">Listar Posts</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") == null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="Login">Login</a>
                            </li>
                            <li>
                                <a class="nav-link text-light" asp-area="" asp-controller="Usuario" asp-action="Registro">Registro</a>
                            </li>
                        }
                        @if (Context.Session.GetString("rol") != null)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-danger" asp-area="" asp-controller="Usuario" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Obligatorio 2 - Mariano Nuñez & Fabricio Ferranty
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
